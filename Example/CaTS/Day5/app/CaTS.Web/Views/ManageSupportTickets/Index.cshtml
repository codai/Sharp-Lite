@model IEnumerable<CaTS.Domain.Support.SupportTicket>

@{
    ViewBag.Title = "Support Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>
    <tr>
        <th>When Opened</th>
        <th>Opened By</th>
        <th>Status</th>
        <th>Issue Type</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@item.WhenOpened</td>
            <td>@item.OpenedBy.LastName, @item.OpenedBy.FirstName</td>
            <td>@item.Status</td>
            <td>@item.IssueType.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Open New Support Ticket", "Open")
</p>