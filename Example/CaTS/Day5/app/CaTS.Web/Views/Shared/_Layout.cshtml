<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@ViewBag.Title</title>

    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @RenderSection("scripts", false)
</head>

<body>
    <!-- start wrapper -->
    <div class="containerWrap">
        <!--start header -->
        <div class="header">
            <!--start logo -->
            <div class="logo">
                <h1>CaTS</h1>
            </div><!--end logo -->

            <!--start navigation -->
            <div id="nav">
                <li class="current">
                    @Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)
                </li>

                @if (HttpContext.Current.User.Identity.IsAuthenticated) {
                    <li class="current">
                        @Html.ActionLink("Support Tickets", "Index", "ManageSupportTickets", new { area = "" }, null)
                    </li>
                    <li class="current">
                        @Html.ActionLink("Customers", "Index", "ManageCustomers", new { area = "" }, null)
                    </li>
                    <li class="current">
                        @Html.ActionLink("Logout", "Logout", "Authentication", new { area = "" }, null)
                    </li>
                }
            </div><!--end navigation -->

            <div class="content" id="wrapper">
                <h2 class="shadows">@ViewBag.Title</h2>

                @if (TempData["message"] != null) {
                    <div class="message">@TempData["message"]</div>
                }

                @if (ViewData["message"] != null) {
                    <div class="message">@ViewData["message"]</div>
                }

                @RenderBody()
            </div>
        </div>

        <!--start footer -->  
        <footer>
            <div class="top"> 
            <!--end footer -->
            </div>

            <div class="footerWrapper" id="footercontent">
                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li> 
                <li>Acme Telecom</li>
            </div> 
        </footer> 

    </div><!--end wrapper -->
</body>
</html>
